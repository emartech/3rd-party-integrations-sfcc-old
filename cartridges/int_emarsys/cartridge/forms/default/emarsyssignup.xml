<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	
	<field formid="emailAddress" binding="emailAddress" label="emarsys.email" type="string" mandatory="true" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" max-length="50" range-error="address.email.invalid" parse-error="address.email.invalid" value-error="address.email.invalid"/>
	<field formid="firstName" binding="firstName" label="emarsys.firstname" type="string" mandatory="false" max-length="50" missing-error="address.firstname.missing" range-error="address.field.invalid" />
	<field formid="lastName" binding="lastName" label="emarsys.lastname" type="string" mandatory="false" max-length="50" missing-error="address.lastname.missing" range-error="address.field.invalid" />
	
	<field formid="gender" binding="gender" label="emarsys.gender" type="string" mandatory="false">
		<options>
			<option label="emarsys.male" value="male" />
			<option label="emarsys.female" value="female" />
		</options>
	</field>
	
	<field formid="countryCode" label="country" type="string" mandatory="false" binding="countryCode" missing-error="address.country.missing" value-error="address.field.invalid">
		<options>
			<option optionid="" label="emarsys.selectcountry" value=""/>
			<option optionid="us" label="emarsys.unitedstates" value="us"/>
		</options>
	</field>
	
	<field formid="city" binding="city" label="emarsys.city" type="string" mandatory="false" min-length="2" max-length="50" missing-error="address.city.missing" range-error="address.field.invalid" />
	<field formid="address1" binding="address1" label="emarsys.address" type="string" mandatory="false" max-length="50" missing-error="resource.addresserror" range-error="address.field.invalid" />
	<field formid="postalCode" binding="postalCode" label="emarsys.zip" type="string" mandatory="false" min-length="5" max-length="10" regexp="(^\d{5}(-\d{4})?$)|(^[abceghjklmnprstvxyABCEGHJKLMNPRSTVXY]{1}\d{1}[A-Za-z]{1} *\d{1}[A-Za-z]{1}\d{1}$)"
		missing-error="resource.errorzip"/>
	
	<!-- use global state list -->
